<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LimitScroller">

        <attr name="android:background"/>
        <!--滚动速度，比如3000，滚动时间会持续3秒钟-->
        <attr name="durationTime" format="integer" />
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="dateTextSize" format="integer" />
        <attr name="dateTextColor" format="color" />
        <attr name="scaleSize" format="float" />  <!--缩放动画增量1：不放大  2:放大两倍-->
    </declare-styleable>
</resources>